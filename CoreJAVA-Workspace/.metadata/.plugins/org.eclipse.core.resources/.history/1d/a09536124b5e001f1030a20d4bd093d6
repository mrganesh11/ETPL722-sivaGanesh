package com.evergent.corejava.ganesh.application4;

public class ColorUtils {
    // ANSI escape codes for colors
    public static final String RESET = "\033[0m";
    public static final String HEADER_COLOR = "\033[34m"; // Blue text
    public static final String INFO_COLOR = "\033[36m";   // Cyan text
    public static final String INPUT_COLOR = "\033[33m";  // Yellow text
    public static final String SUCCESS_COLOR = "\033[32m"; // Green text
    public static final String ERROR_COLOR = "\033[31m";   // Red text
}